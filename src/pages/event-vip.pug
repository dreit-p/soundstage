doctype html
html(lang="en")
	head
		include /components/head/head.pug
	body
		div(style="display: none")
			include /assets/symbol/svg/sprite.symbol.svg
		.page-bg.hidden
			picture
				source(type="image/webp" srcset="../assets/images/hero-bg.webp")
				img.desktop.objfit(src="../assets/images/hero-bg.jpg")
			picture
				source(type="image/webp" srcset="../assets/images/hero-bg-mobile.webp")
				img.mobile.objfit(src="../assets/images/hero-bg-mobile.jpg")

		include /components/header/header-with_user.pug

		section.titled-content
			.limit
				header
					include /components/breadcrumbs/breadcrumbs.pug
				.content

					section.artist-info
						.image-side
							.image(style="background-image: url(../assets/images/content/artist-example.jpg)")
							.info
								.top
									.inline
										.left
											.title Kill Paris
											.caption SoundStage PREMIERE
											.date apr 26 @ 12:00 PM
										.right
											.buttons
												span(data-tooltip="Follow")
													a.ui-btn.secondary.circle.thin.flat(href="#")
														.btn-icon
															svg
																use(href="#star")
												span(data-tooltip="Share")
													a.ui-btn.secondary.thin.circle.flat(href="#")
														.btn-icon
															svg
																use(href="#share")
								.middle
								.bottom
									//- .progress-bar-caption
									//- 	.inline
									//- 		.left 20% funded
									//- 		.right.end 3 days to go
									//- .progress-bar
									//- 	.progress(style="width: 20%")

						.text-side
							.text-wrapper.desktop
								include /components/object-info/win-vip.pug


					section.artist-appeal
						.artist-message
							.title A message from the artist...
							.text.custom-scroll Hey friends! It's with great pleasure that I invite you to my SoundStage debut. #[br]#[br] I'm planning a very special live stream where I'll be bringing a dash of summer sizzle and some new tracks I hope you'll like. Hope to see you all there!
							.signature Corey Baker #[br] Kill Paris

						.appeal-interface
							include /components/object-appeal/registered-win-vip.pug

					section.artist-info.mobile
						.text-side
							include /components/object-info/win-vip.pug



		section.titled-content
			.limit
				header
					.category have a question?
					.main-row
						.title.desktop Frequently Asked Questions
						.title.mobile FAQ
				.content
					include /components/faq/faq.pug

		include /components/common-info/info.pug

		include /components/footer/footer.pug
		include /components/modals/wrapper.pug
	script(src="js/main.js")
