						.inline
							p Not a member? #[a(href="#") Sign&nbsp;Up&nbsp;Now]
							button.ui-btn.primary
								.btn-caption.desktop Send Instructions
								.btn-caption.mobile Send



		section.fullscreen-form
			.limit
				.bg-image
					picture
						source(type="image/webp" srcset="../assets/images/forms-bg.webp")
						img.desktop.objfit(src="../assets/images/forms-bg.jpg")
				.form-wrapper
					form.form

						// choose needed

						.form-state-icon.success
							svg
								use(href="#success")

						.form-state-icon.notice
							svg
								use(href="#notice")

						.form-state-icon.failure
							svg
								use(href="#failure")

						.form-state-icon.warning
							svg
								use(href="#warning")

						.title Congrats!

						p You have successfully reset your password. Now you can easily sign in to your account.

						.inline
							button.ui-btn.primary
								.btn-caption Got it

	script(src="js/main.js")
