		.tile-wrapper(class=item.class)
			.tile.event(class=`${item.sponsorship == 100 ? 'fees-completed' : ''}`)
				.tile-image
					.image(style=`background-image: url(../assets/images/content/${item.image})`)
					.info
						.top
						.middle
						.bottom
							.inline.down
								.left
									.event-info
										.date-badge(style=`background-color: #${item.color}`)
											.day= item.date[0]
											.month= item.date[1]
										.caption-wrapper
											.event-title= item.artistName
											.event-caption= item.eventName
								.right
									.buttons
										a.ui-btn.secondary
